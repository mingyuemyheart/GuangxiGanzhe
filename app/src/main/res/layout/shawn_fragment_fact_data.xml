<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">

    <LinearLayout
        android:id="@+id/llTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/light_gray"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:id="@+id/tvStationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="站名"
            android:gravity="center"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <TextView
            android:id="@+id/tvTemp30"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="土壤温度\n(30cm)"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <TextView
            android:id="@+id/tvTemp50"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="土壤温度\n(50cm)"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <TextView
            android:id="@+id/tvHumidity20"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="含水率\n(20cm)"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

        <TextView
            android:id="@+id/tvHumidity40"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="含水率\n(40cm)"
            android:textColor="@color/text_color3"
            android:textSize="@dimen/level_5"/>

    </LinearLayout>

    <ListView
        android:layout_below="@+id/llTitle"
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="@color/transparent"
        android:divider="@color/light_gray"
        android:dividerHeight="0.5dip"
        android:listSelector="@color/transparent"
        android:overScrollMode="never"
        android:scrollbars="none"/>

    <TextView
        android:id="@+id/tvPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="暂无数据~~~"
        android:textColor="@color/text_color4"
        android:textSize="@dimen/level_4"
        android:visibility="gone"/>

</RelativeLayout>