<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="基本信息"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"/>

            <TextView
                android:id="@+id/tvLand"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/shawn_selector_logout"
                android:text="地块信息"
                android:padding="5dp"
                android:gravity="center"
                android:layout_alignParentEnd="true"
                android:textColor="@color/white"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvState"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInfo"
                android:layout_marginStart="10dp"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/tvSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvInfo"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@+id/tvState"
                android:textColor="@color/text_color4"
                android:textSize="@dimen/level_5"/>

            <TextView
                android:id="@+id/divider1"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/tvState"
                android:background="@color/light_gray"/>

            <TextView
                android:id="@+id/tvHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider1"
                android:padding="10dp"
                android:text="土壤湿度监测(%)"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"/>

            <HorizontalScrollView
                android:id="@+id/hScrollView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvHumidity"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/llContainer1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>

            <TextView
                android:id="@+id/divider2"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:layout_below="@+id/hScrollView1"
                android:background="@color/light_gray"/>

            <TextView
                android:id="@+id/tvForeGuangai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/divider2"
                android:padding="10dp"
                android:text="预报灌溉量(m³)"
                android:textColor="@color/text_color3"
                android:textSize="@dimen/level_4"/>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvForeGuangai"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/llContainer2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"/>

            </HorizontalScrollView>

        </RelativeLayout>

    </ScrollView>

    <com.wang.avi.AVLoadingIndicatorView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/loadingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="visible"
        app:indicator="LineScalePulseOutRapid"
        app:indicator_color="@color/colorPrimary"/>

</RelativeLayout>